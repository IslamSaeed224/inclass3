import turtle

def draw_square():
    """Draws a square with a fixed side length."""
    side_length = 100
    for _ in range(4):
        turtle.forward(side_length)
        turtle.right(90)

# Set up the turtle
turtle.speed(1)

# Draw the first square
draw_square()

# Move turtle to a new position for the second square
turtle.penup()
turtle.goto(150, 0)  # Move right to avoid overlap
turtle.pendown()

# Draw the second square
draw_square()

# Move turtle to a new position for the third square
turtle.penup()
turtle.goto(300, 0)  # Move further right
turtle.pendown()

# Draw the third square
draw_square()

# End the drawing
turtle.done()



ef find_even_numbers():
    even_numbers = []  # Initialize an empty list to store even numbers
    for number in range(0, 11):  # Loop from 0 to 10
        if number % 2 == 0:  # Check if the number is even
            even_numbers.append(number)  # Add even number to the list
    print("Even numbers between 0 and 10:", even_numbers)

# Call the function
find_even_numbers()
