def display_info():
    # Information about the book
    title = "Can't Hurt Me"
    author = "David Goggins"
    description = (
        "In 'Can't Hurt Me,' David Goggins shares his incredible life story and "
        "the mental and physical challenges he overcame. Known for his resilience, "
        "Goggins reveals how he transformed his life from poverty and abuse to "
        "becoming a Navy SEAL, ultra-endurance athlete, and motivational speaker. "
        "The book offers insights into Goggins' mindset and provides strategies "
        "for overcoming adversity, pushing limits, and embracing discomfort to "
        "achieve true potential."
    )

    # Display book information
    print(f"Title: {title}")
    print(f"Author: {author}")
    print("Description:")
    print(description)

# Call the function to display the information
display_info()





